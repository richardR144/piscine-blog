
{% extends 'base.html.twig' %}
{% block content %}
    <main>

        <h1>Ajouter un article</h1>


       <form method="post" > 
         <!--method="action"--> 

            <label>
                Titre
                <input type="text" name="title" />
            </label>

            <label>
                Contenu
                <input type="text" name="content" />
            </label>

            <input type="submit" />

        </form>


        
        {% if isRequestOK %}

            <p>L'article a bien été enregistré en BDD</p>

        {% endif %}

    </main>

       {% endfor content %}    